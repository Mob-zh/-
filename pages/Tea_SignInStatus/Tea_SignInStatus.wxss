.sign-in-status-page {
  padding: 20px;
}

.page-header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.table-header {
  display: flex;
  justify-content: space-around;
  padding: 10px;
  background-color: #f0f0f0;
  border-bottom: 1px solid #ddd;
}

.header-item {
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.table-content {
  margin-top: 10px;
}

.table-row {
  display: flex;
  justify-content: space-around;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.row-item {
  flex: 1;
  text-align: center;
}

  .actions {
    display: flex;
    flex-direction: column;
    height: 100vh; /* 让容器高度填满屏幕 */
    gap: 20rpx;
  }
  
  .btn {
    background-color: #007aff;
    color: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
    text-align: center;
  }
    
.sign-in-page { 
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.class-info {
  margin-bottom: 20px;
  text-align: center;
}

.class-name {
  font-size: 20px;
  font-weight: bold;
}

.class-description {
  font-size: 16px;
  color: #666;
}

.time-selector {
  margin-bottom: 20px;
  width: 100%;
}

.picker {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  text-align: center;
}

.code-box {
  margin-bottom: 20px;
  padding: 20px;
  width: 100%;
  border: 1px dashed #ddd;
  border-radius: 5px;
  background-color: #f9f9f9;
  text-align: center;
}

.code {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.start-button {
  padding: 10px 20px;
  background-color: #007acc;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.sign-status {
  margin-top: 20px;
  width: 100%;
  background-color: #f2f8fc;
  border: 1px solid #007acc;
  border-radius: 5px;
  padding: 20px;
  text-align: center;
}

.sign-status text {
  display: block;
  margin: 10px 0;
  font-size: 16px;
  color: #333;
}

.sign-status .highlight {
  font-size: 20px;
  font-weight: bold;
  color: #007acc;
}

/* 按钮隐藏状态（可选） */
.hidden {
  display: none;
}

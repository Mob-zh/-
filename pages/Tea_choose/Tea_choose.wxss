.header {
  position: sticky; /* 固定顶部 */
  top: 0;
  background-color: #007aff; /* 背景色 */
  color: white; /* 文字颜色 */
  padding: 20rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  z-index: 10; /* 确保固定顶部 */
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
}

.class-list {
  padding: 16rpx;
}

.class-item {
  background-color: #f5f5f5;
  margin-bottom: 16rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.class-name {
  font-size: 32rpx;
  font-weight: bold;
}

.class-description {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #666;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx; /* 根据图标调整高度 */
  display: flex;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  z-index: 999;
}

/* 导航项样式 */
.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #333333;
  font-size: 24rpx;
}

/* 图标样式 */
.icon {
  width: 40rpx; /* 图标宽度 */
  height: 40rpx; /* 图标高度 */
  margin-bottom: 5rpx; /* 图标与文字的间距 */
}

.nav-item:active {
  color: #007aff;
}

/*加入班级按钮*/
.join-class-button {
  margin-top: 20rpx;
  text-align: center; /* 按钮居中 */
}

.add-class-btn {
  display: inline-block;
  width: 80%; /* 按钮占宽 */
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  padding: 16rpx;
  border: none;
  border-radius: 8rpx;
  text-align: center;
}

/*创建班级按钮*/
.create-class-button {
  margin-top: 20rpx;
  text-align: center; /* 按钮居中 */
}

.create-class-btn {
  display: inline-block;
  width: 80%; /* 按钮占宽 */
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  padding: 16rpx;
  border: none;
  border-radius: 8rpx;
  text-align: center;
}


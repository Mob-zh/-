.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.user-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
}

.info-label {
  font-size: 32rpx;
  color: #666;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.input-section {
  margin-bottom: 20rpx;
  width: 100%;
}

.input-label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.class-code-input {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #007aff;
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

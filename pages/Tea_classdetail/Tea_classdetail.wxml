<view class="page-container">
  <!-- 课程信息部分 -->
  <view class="class-info">
    <!-- <view>
      <text class="title">{{classInfo.name}} - {{classInfo.description}} </text>
    </view> -->
    <view>
      <text>课程名: {{classInfo.course_name}}</text>
    </view>
    <view>
      <text>课程号: {{classInfo.class_id}}</text>
    </view>
    <view>

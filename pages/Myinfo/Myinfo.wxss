/* 页面整体容器 */
.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息部分 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  background-color: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  border: 2rpx solid #ddd;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.phone {
  font-size: 28rpx;
  color: #888;
}

/* 操作列表 */
.action-list {
  width: 100%;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.action-item:last-child {
  border-bottom: none;
}

.icon {
  font-size: 28rpx;
  color: #999;
}


/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx; /* 根据图标调整高度 */
  display: flex;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  z-index: 999;
}

/* 导航项样式 */
.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #333333;
  font-size: 24rpx;
}

/* 图标样式 */
.icon {
  width: 40rpx; /* 图标宽度 */
  height: 40rpx; /* 图标高度 */
  margin-bottom: 5rpx; /* 图标与文字的间距 */
}

.nav-item:active {
  color: #007aff;
}
